<%= content_for :page_title do %>
  Management Duty - company
<%end%>

<%= content_for :breadcrumb do %>
  <a class="breadcrumb-item" href="index">Dashboard</a>
  <span class="breadcrumb-item active">Company</span>
  <span class="breadcrumb-item active">Collaborators</span>
<%end%>

<%= content_for :body_title do %>
  Lorem ipsum dolor sit
<%end%>

<%= content_for :body_description do %>
  Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam maximus
<%end%>

<%= content_for :section_title do %>
  <%= link_to('Invite Collaborator', new_user_invitation_path, class: 'btn btn-info')%>
<%end%>

<%= content_for :section_description do %>

  <% if @collaborators%>
    <table class="table mg-b-0 table-contact">
      <thead>
        <tr>
          <th class="wd-5p">
            <label class="ckbox mg-b-0">
              <input type="checkbox"><span></span>
            </label>
          </th>
          <th class="tx-10-force tx-mont tx-medium">Name / Email</th>
          <th class="tx-10-force tx-mont tx-medium hidden-xs-down">ROLE</th>
          <th class="tx-10-force tx-mont tx-medium hidden-xs-down">Convidado em</th>
          <th class="wd-5p hidden-xs-down"></th>
        </tr>
      </thead>
      <tbody>
        <% @collaborators.each do |collaborator| %>
          <tr>
            <td class="valign-middle">
              <label class="ckbox mg-b-0">
                <input type="checkbox"><span></span>
              </label>
            </td>
            <td>
              <div class="d-flex align-items-center">
                <%= image_tag('user.png', :class => 'wd-32 rounded-circle', :all => '') %>
                <div class="mg-l-15">
                  <div class="tx-inverse"><%= collaborator.name %></div>
                  <span class="tx-12"><%= collaborator.email %></span>
                </div>
              </div>
            </td>
            <td class="valign-middle hidden-xs-down"><%= collaborator.role %></td>
            <td class="valign-middle hidden-xs-down"><%= collaborator.invitation_sent_at.strftime('%d %b %y - %H:%M:%S') %></td>
            <td class="dropdown hidden-xs-down">
              <a href="page-contacts.html#" data-toggle="dropdown" class="btn pd-y-3 tx-gray-500 hover-info"><i class="icon ion-more"></i></a>
              <div class="dropdown-menu dropdown-menu-right pd-10">
                <nav class="nav nav-style-1 flex-column">
                  <a href="#" class="nav-link">Info</a>
                  <a href="#" class="nav-link">Email</a>
                  <a href="#" class="nav-link">Edit</a>
                  <a href="#" class="nav-link">Delete</a>
                </nav>
              </div><!-- dropdown-menu -->
            </td>
            </tr>

        <% end %>
      </tbody>
    </table>
  <% end %>
<%end%>
